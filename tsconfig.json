{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "noEmitOnError": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/data/db.ts", "**/*.test.ts"]
}
